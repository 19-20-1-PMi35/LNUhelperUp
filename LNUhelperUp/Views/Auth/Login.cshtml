
@{
    ViewData["Title"] = "Login";
}

<h2>Зайти у кабінет</h2>


<form asp-action="Login" asp-controller="AuthControler" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label>Введіть Email</label>
            <input type="text" />
            <span />
        </div>
        <div class="form-group">
            <label >Введіть пароль</label>
            <input />
            <span  />
        </div>
        <div class="form-group">
            
            <input asp-action="SignUp" asp-controller="AuthControler" type="submit" value="Реєстрація" class="btn btn-outline-dark" />
            <input type="submit" value="Увійти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
