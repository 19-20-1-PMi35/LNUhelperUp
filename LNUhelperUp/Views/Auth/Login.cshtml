@model LNUhelperUp.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@Html.ValidationSummary(true)
<h2>Зайти у кабінет</h2>


<a asp-action="SignUp" asp-controller="Auth">Реєстрація</a>

<form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Login">Введіть Email</label>
            <input type="text" asp-for="Login" />
            @Html.ValidationMessageFor(model => model.Login)
        </div>
        <div class="form-group">
            <label asp-for="Password">Введіть пароль</label>
            <input asp-for="Password" />
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            <input type="submit" value="Увійти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>