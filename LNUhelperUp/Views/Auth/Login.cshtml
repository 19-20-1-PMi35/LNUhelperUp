

@using Microsoft.AspNetCore.Html
@model LNUhelperUp.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Зайти у кабінет</h2>


<form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Login">Введіть Email</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введіть пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input type="submit" value="Увійти" />
        </div>
        <div class="form-group">

            <a class="nav-link text-dark" style="text-align: center" asp-area="" asp-controller="auth" asp-action="SignUp">Реєстрація</a>

        </div>
    </div>
</form>
