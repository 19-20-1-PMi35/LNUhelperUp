@using Microsoft.AspNetCore.Html
@model LNUhelperUp.Models.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Реєстрація";
}

@Html.ValidationSummary(true)
<h1 style="margin-top:20px">@ViewData["Title"]</h1>

<form asp-action="SignUp" asp-controller="Auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="FacultyId">FacultyId</label><br />
            <input type="text" asp-for="FacultyId" />
            @Html.ValidationMessageFor(model => model.FacultyId)
        </div>
        <div>
            <label asp-for="Nickname">Enter Nickname</label><br />
            <input type="text" asp-for="Nickname" />
            @Html.ValidationMessageFor(model => model.Nickname)
        </div>
        <div>
            <label asp-for="Login">Enter Email</label><br />
            <input type="text" asp-for="Login" />
            @Html.ValidationMessageFor(model => model.Login)
        </div>
        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input asp-for="Password" />
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div>
            <input type="submit" value="Зареєструватися" />
        </div>
        <button asp-controller="Home" asp-action="Index">Додати фото</button>
        <a class="nav-link text-dark" style="text-align: center" asp-area="" asp-controller="auth" asp-action="Login">Увійти</a>
    </div>
</form>




