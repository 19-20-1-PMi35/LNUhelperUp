@model LNUhelperUp.Models.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Реєстрація";
}
@Html.ValidationSummary(true)

<h1>@ViewData["Title"]</h1>



<form asp-action="SignUp" asp-controller="Auth" asp-anti-forgery="true" style="margin-top:20px;">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group row">
            <label asp-for="FacultyId" class="col-sm-2 col-form-label">Факультет: </label><br />
            <div class="col-sm-10">
                <select class="form-control" asp-for="FacultyId" asp-items="ViewBag.Faculties"></select>
                @Html.ValidationMessageFor(model => model.FacultyId)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Nickname" class="col-sm-2 col-form-label">Логін</label><br />
            <div class="col-sm-10">
                <input class="form-control" type="text" asp-for="Nickname" />
                @Html.ValidationMessageFor(model => model.Nickname)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Login" class="col-sm-2 col-form-label">Email</label><br />
            <div class="col-sm-10">
                <input class="form-control" type="text" asp-for="Login" />
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Пароль</label><br />
            <div class="col-sm-10">
                <input class="form-control" asp-for="Password" />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
            
        <div class="form-inline justify-content-center" style="margin-top:35px;" align:center>
            <div class="form-group mb-2">
                <input type="submit" value="Зареєструватися" class="btn btn-outline-success" />
            </div>
            <div class="form-group mx-sm-3 mb-2">
                <a asp-action="Login" asp-controller="Auth">Зайти</a>
            </div>
        </div>

        </div>
</form>




