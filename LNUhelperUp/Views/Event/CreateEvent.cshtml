@model LNUhelperUp.Models.ViewModels.AddEventViewModel
@{
    ViewData["Title"] = "CreateEvent";
}
@Html.ValidationSummary(true)
<h1>CreateEvent</h1>

<form asp-action="CreateEvent" asp-controller="Event" method="post" enctype="multipart/form-data" style="margin-top:20px;">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Назва оголошення: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Name" />
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Text" class="col-sm-2 col-form-label">Текст оголошення: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Text" />
            @Html.ValidationMessageFor(model => model.Text)
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Text" class="col-sm-2 col-form-label">Ціна оголошення: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Price" />
            @Html.ValidationMessageFor(model => model.Price)
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Text" class="col-sm-2 col-form-label">К-сть відві-ів: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="ParticipantAmount" />
            @Html.ValidationMessageFor(model => model.ParticipantAmount)
        </div>
    </div><div class="form-group row">
        <label asp-for="Text" class="col-sm-2 col-form-label">Місце проведення: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Place" />
            @Html.ValidationMessageFor(model => model.Place)
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Time" class="col-sm-2 col-form-label">Дата: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Time" placeholder="dd/mm/yyyy" />
            @Html.ValidationMessageFor(model => model.Time)
        </div>
    </div>
    <div class="form-inline">
        <label asp-for="Photo" >Додати фото: </label>
        <div class="col-auto">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" /><br>
                <label class="custom-file-label">Виберіто фото</label>
                @Html.ValidationMessageFor(model => model.Photo)
            </div>
        </div>
    </div>

    <div class="row justify-content-center" align:center style="margin-top:35px;">

        <button type="submit" class="btn btn-outline-success">Готово</button>

    </div>
</form>




