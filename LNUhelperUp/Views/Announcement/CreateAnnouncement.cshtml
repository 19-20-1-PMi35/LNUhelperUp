@model LNUhelperUp.Models.ViewModels.AddEventViewModel
@{
    ViewData["Title"] = "CreateAnnouncement";
}
@Html.ValidationSummary(true)
<h1>CreateAnnouncement</h1>

<form asp-action="CreateAnnouncement" asp-controller="Announcement" method="post" enctype="multipart/form-data" style="margin-top:20px;">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Назва оголошення: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Name" />
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Text" class="col-sm-2 col-form-label">Текст оголошення: </label><br />
        <div class="col-sm-10">
            <input class="form-control" type="text" asp-for="Text" />
            @Html.ValidationMessageFor(model => model.Text)
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="coll-md-2 col-form-label">Додати фото: </label>
        <div class="coll-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" /><br>
                <label class="custom-file-label">Виберіто фото</label>
                @Html.ValidationMessageFor(model => model.Photo)
            </div>
        </div>
    </div>

    <div class="row justify-content-center" align:center style="margin-top:35px;">

        <button type="submit" class="btn btn-outline-success">Готово</button>

    </div>
</form>