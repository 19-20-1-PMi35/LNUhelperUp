@model LNUhelperUp.Models.ViewModels.EditViewModel
@{
    ViewData["Title"] = "EditProfile";
}
@Html.ValidationSummary(true)
<h1>Редагувати</h1>


<form asp-action="EditProfile" asp-controller="Profile" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="FacultyId">FacultyId</label><br />
            <select asp-for="FacultyId" asp-items="ViewBag.Faculties"></select>
            @Html.ValidationMessageFor(model => model.FacultyId)
        </div>
        <div>
            <label asp-for="Nickname">Enter Nickname</label><br />
            <input type="text" asp-for="Nickname" value="@ViewBag.Nickname" />
            @Html.ValidationMessageFor(model => model.Nickname)
        </div>
        <div>
            <label asp-for="Login">Enter Email</label><br />
            <input type="text" asp-for="Login" value="@ViewBag.Login" />
            @Html.ValidationMessageFor(model => model.Login)
        </div>
        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input asp-for="Password" value="@ViewBag.Password" />
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <div class="form-group">
            <input type="submit" value="Редагувати" class="btn btn-outline-dark" />
        </div>
    </div>
</form>