@model LNUhelperUp.Models.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "EditProfile";
}
@Html.ValidationSummary(true)
<h1>Редагувати</h1>


<form asp-action="EditProfile" asp-controller="Profile" asp-anti-forgery="true" style="margin-top:20px;">
    <div class="validation" asp-validation-summary="ModelOnly" />
    
        <div class="form-group row">
            <label asp-for="FacultyId" class="col-sm-2 col-form-label">Факультет: </label><br />
            <div class="col-sm-10">
                <select class="form-control" asp-for="FacultyId" asp-items="ViewBag.Faculties"></select>
                @Html.ValidationMessageFor(model => model.FacultyId)
            </div>
            </div>
        <div class="form-group row">
            <label asp-for="Nickname" class="col-sm-2 col-form-label">Нікнейм: </label><br />
            <div class="col-sm-10">
                <input class="form-control" type="text" asp-for="Nickname" value="@ViewBag.Nickname" />
                @Html.ValidationMessageFor(model => model.Nickname)
            </div>
         </div>
        <div class="form-group row">
            <label asp-for="Login" class="col-sm-2 col-form-label">Email: </label><br />
            <div class="col-sm-10">
                <input class="form-control" type="text" asp-for="Login" value="@ViewBag.Login" />
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label">Пароль</label><br />
            <div class="col-sm-10">
                <input class="form-control" asp-for="Password" value="@ViewBag.Password" />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="row justify-content-center"  align:center style="margin-top:35px;">
            
                <button type="submit" class="btn btn-outline-success">Готово</button>
           
        </div>
</form>