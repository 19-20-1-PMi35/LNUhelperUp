@model LNUhelperUp.Models.ViewModels.PhotoViewModel
@{
    ViewData["Title"] = "Добавление файла";
}
@Html.ValidationSummary(true)
<h1>Змінити фото</h1>

<form asp-action="ChangePhoto" asp-controller="Profile" method="post" enctype="multipart/form-data" class="mt-3">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="form-group row">
        <label asp-for="Photo" class="coll-md-2 col-form-label">Додати фото</label>
        <div class="coll-md-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" /><br>
                <label class="custom-file-label">Виберіто фото</label>
                @Html.ValidationMessageFor(model => model.Photo)
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="coll-md-10">
            <button type="submit" class="btn btn-primary">Завантажити</button>
        </div>
    </div>
</form>

